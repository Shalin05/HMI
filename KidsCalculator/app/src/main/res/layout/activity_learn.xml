<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shalin.kidscalculator.LearnActivity">

    <TextView
        android:id="@+id/Number1"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <Button
        android:id="@+id/bt_next"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/Number1"
        android:layout_toRightOf="@+id/Number1"
        android:onClick="buttonNext"
        android:text="next" />

    <TextView
        android:id="@+id/num2"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/Number1"
        android:layout_alignStart="@+id/Number1"
        android:layout_below="@+id/t_sign"
        android:layout_marginTop="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="400dp"
        android:layout_height="75dp"
        android:layout_below="@+id/Number1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:orientation="horizontal"></LinearLayout>

    <TextView
        android:id="@+id/t_sign"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_below="@+id/linearlayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <LinearLayout
        android:id="@+id/linearlayout2"
        android:layout_width="400dp"
        android:layout_height="75dp"
        android:layout_alignTop="@+id/num2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:orientation="horizontal"></LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearlayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <LinearLayout
        android:id="@+id/linearlayout3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayput4"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/linearlayout3"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"></LinearLayout>

</RelativeLayout>
